<div class="destinations-div">

  <% if destinations.length >= 1 %>

    <h3>Top Destinations:</h3>
    <ol>
      <% destinations.each do |destination| %>
          <li>
            <h4><u>
              <%= destination.name %>
            </u></h4>
          </li>
          <p>
            <%= destination.desc %>
          </p>
      <% end %>
    </ol>

  <% elsif warnings.length >= 1 %>

    <h3>Travel Alerts:</h3>

    <ol>
        <% warnings.each do |warning| %>
            <li>
              <h4><u>
                <%= warning.warning_type %>
              </u></h4>
            </li>
            <p>Date:
              <%= warning.date %>
            </p>
            <p>
              <a href="<%= warning.warning_link %>">More Information</a>
            </p>
        <% end %>
      </ol>

    <% else %>

      <h3>There seems to be no destinations here.</h3>

    <% end %>

</div>